<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/md_blue_600">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/itsh"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_below="@id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/TxtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_redondeado_white"
            android:hint="Digita tu Vorreo Electronico"
            android:textColorHint="@color/md_white_1000"
            android:textSize="30dp"
            android:textColor="@color/md_white_1000"
            android:layout_margin="10dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/Txtpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_redondeado_white"
            android:textSize="30dp"
            android:textColor="@color/md_white_1000"
            android:layout_margin="10dp"
            android:hint="Digita tu contra"
            android:textColorHint="@color/md_white_1000"
            android:inputType="textPassword"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesion"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="25dp"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/btn_fondo_color"
            android:elevation="5dp"
            android:layout_marginTop="20dp"
            android:onClick="Onclick"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Â¿No tienes una?"
            android:textAlignment="center"
            android:textColorHint="@color/md_pink_A700"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:padding="5dp" />
        <Button
            android:id="@+id/btnCrear"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Crear Una"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="25dp"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/btn_fondo_color"
            android:elevation="5dp"
            android:layout_marginTop="20dp"
            android:onClick="Onclick"
            />

    </LinearLayout>

</RelativeLayout>